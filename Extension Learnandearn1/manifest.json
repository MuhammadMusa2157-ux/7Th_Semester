{
  "manifest_version": 3,
  "name": "Learn and Earn Online Tools",
  "description": "Official Extension of Learnandearn online Tools.",
  "version": "3.1",
  "permissions": ["activeTab", "scripting", "storage", "cookies","management","notifications","webNavigation"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js" 
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*/*"], 
      "js": ["content.js"], 
      "run_at": "document_idle" 
    }
  ]
}
